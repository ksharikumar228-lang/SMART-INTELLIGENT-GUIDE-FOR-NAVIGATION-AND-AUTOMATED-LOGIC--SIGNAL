            },
            "A": {
                "Title": "ANIMALS ON ROAD (ро╡ро┐ро▓роЩрпНроХрпБроХро│рпН/роХро╛ро▓рпНроироЯрпИроХро│рпН)",
                "List": ["Dog (роиро╛ропрпН)", "Cow/Cattle (рооро╛роЯрпБ)", "Goat (роЖроЯрпБ)", "Buffalo (роОро░рпБроорпИ)", "Horse (роХрпБродро┐ро░рпИ)", "Wild Animal (ро╡рой ро╡ро┐ро▓роЩрпНроХрпБ)"]
            }
        }

        # Settings роХрпНроХро╛рой родройро┐ рокроЯрпНроЯро┐ропро▓рпН (Road Conditions)
        self.road_conditions = [
