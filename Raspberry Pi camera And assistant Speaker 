        self.direction_map = {
            "NORTH": "ро╡роЯроХрпНроХрпБ",
            "SOUTH": "родрпЖро▒рпНроХрпБ",
            "EAST": "роХро┐ро┤роХрпНроХрпБ",
            "WEST": "роорпЗро▒рпНроХрпБ"
        }

    # ==========================================
    # 2. MAIN LOGIC (INPUT SECTION)
    # ==========================================
    def start_system(self):
        print("\n\n")
        print("  ЁЯСо AI TRAFFIC POLICE ASSISTANT V2.0 ЁЯСо  ")
        print("============================================")

        # --- STEP 1: MAIN MENU ---
        print("\n[STEP 1] роЙро│рпНро│рпАроЯрпНроЯрпБ ро╡роХрпИропрпИродрпН родрпЗро░рпНроирпНродрпЖроЯрпБроХрпНроХро╡рпБроорпН:")
        print(" " + "-"*50)
        print("   [1]  Cycles         (рооро┐родро┐ро╡рогрпНроЯро┐роХро│рпН)")
        print("   [2]  Two Wheelers   (роЗро░рпБ роЪроХрпНроХро░ ро╡ро╛роХройроЩрпНроХро│рпН)")
        print("   [3]  Three Wheelers (роорпВройрпНро▒рпБ роЪроХрпНроХро░ ро╡ро╛роХройроЩрпНроХро│рпН)")
        print("   [4]  Light Vehicles (роиро╛ройрпНроХрпБ роЪроХрпНроХро░ ро╡ро╛роХройроЩрпНроХро│рпН)")
        print("   [6]  Heavy Vehicles (роХройро░роХ ро╡ро╛роХройроЩрпНроХро│рпН)")
        print("   [S]  Special Equip  (роЪро┐ро▒рокрпНрокрпБ ро╡ро╛роХройроЩрпНроХро│рпН)")
        print("   [A]  Animals        (ро╡ро┐ро▓роЩрпНроХрпБроХро│рпН/роХро╛ро▓рпНроироЯрпИроХро│рпН) ЁЯРХ")
        print(" " + "."*50)
        print("   [9]  тЪЩя╕П SETTINGS / ROAD ALERTS (роЪро╛ро▓рпИ роОроЪрпНроЪро░ро┐роХрпНроХрпИроХро│рпН)") 
        print(" " + "-"*50)
        
        main_input = input("\nЁЯСЙ Enter Code: ").strip().upper()

        # --- CASE A: SETTINGS / ROAD CONDITIONS ---
        if main_input == "9":
            self.handle_road_settings()
            return

        # --- CASE B: VEHICLES & ANIMALS ---
        if main_input not in self.vehicle_data:
            print("\nтЭМ Error: родро╡ро▒ро╛рой родрпЗро░рпНро╡рпБ! (Invalid Code)")
            return

        # --- STEP 2: OBJECT SELECTION ---
        cat_info = self.vehicle_data[main_input]
        print(f"\n[STEP 2] {cat_info['Title']} рокроЯрпНроЯро┐ропро▓рпН:")
        print("-" * 50)
        
        v_list = cat_info['List']
        for idx, vehicle in enumerate(v_list, 1):
            print(f"   [{idx}] {vehicle}")  
        print("-" * 50)

        try:
            v_choice = int(input(f"\nЁЯСЙ Select Number (1-{len(v_list)}): "))
            if 1 <= v_choice <= len(v_list):
                sel_object = v_list[v_choice - 1]
            else:
                print("\nтЭМ Error: родро╡ро▒ро╛рой роОрогрпН!")
                return
        except ValueError:
            print("\nтЭМ Error: роОрогрпНроХро│рпИ роороЯрпНроЯрпБроорпН роЙро│рпНро│ро┐роЯро╡рпБроорпН!")
            return

        # --- STEP 3: DIRECTION ---
        print("\n[STEP 3] ро╡ро░рпБроорпН родро┐роЪрпИ:")
        print("-" * 30)
        dir_keys = ["NORTH", "SOUTH", "EAST", "WEST"]
        for idx, d in enumerate(dir_keys, 1):
            print(f"   [{idx}] {d}")
        print("-" * 30)
        
        try:
            d_choice = int(input("\nЁЯСЙ Select Direction (1-4): "))
            if 1 <= d_choice <= 4:
                direction = dir_keys[d_choice - 1]
            else:
                print("\nтЭМ Error: родро╡ро▒ро╛рой роОрогрпН!")
                return
        except ValueError:
            print("\nтЭМ Error: роОрогрпН родрпЗро╡рпИ!")
            return

        # --- FINAL OUTPUT ---
        self.display_traffic_card(sel_object, direction, category_code=main_input)

    # ==========================================
    # 3. SETTINGS / ROAD CONDITIONS HANDLER
    # ==========================================
    def handle_road_settings(self):
        print("\n\n")
        print("  тЪая╕П  ROAD CONDITION SETTINGS (роЪро╛ро▓рпИ роОроЪрпНроЪро░ро┐роХрпНроХрпИроХро│рпН)  тЪая╕П")
        print("======================================================")
        
        for i, cond in enumerate(self.road_conditions, 1):
            print(f"   тШЕ [{i}] {cond['msg']}")
        
        print("\n" + "-"*54)
        
        try:
            c_choice = int(input("ЁЯСЙ Select Condition to Broadcast (1-6): "))
            if 1 <= c_choice <= len(self.road_conditions):
                selected_condition = self.road_conditions[c_choice - 1]
                
                print("\n\n")
                print(" " + "тЦУ"*50 + " ")
                print(f"   ЁЯУв  BROADCAST ALERT SYSTEM ACTIVATED ")
                print(" " + "тЦУ"*50 + " ")
                print(f"\n  {selected_condition['icon']}  WARNING / роОроЪрпНроЪро░ро┐роХрпНроХрпИ:")
                print(f"      \"{selected_condition['msg']}\"")
                print("\n  ЁЯЫбя╕П  POLICE INSTRUCTION:")
                print(f"      {selected_condition['action']}")
                print(" " + "_"*50 + " ")
                print("\n")
                
            else:
                print("\nтЭМ Error: Invalid Selection.")
        except ValueError:
            print("\nтЭМ Error: Numbers only.")

    # ==========================================
    # 4. TRAFFIC CARD DISPLAY (VEHICLES/ANIMALS)
    # ==========================================
    def display_traffic_card(self, obj_name, coming_dir, category_code):
        
        tamil_dir = self.direction_map[coming_dir]
        
        # Variables
        alert_title = ""
        msg_tamil = ""
        msg_action = ""
        symbol = ""
        
        # A. ANIMALS LOGIC
        if category_code == "A":
            symbol = "ЁЯРХ" if "Dog" in obj_name else "ЁЯРД"
            alert_title = "ANIMAL CROSSING ALERT"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ {obj_name} роЪро╛ро▓рпИропро┐ро▓рпН ро╡ро░рпБроХро┐ро▒родрпБ/роХрпБро▒рпБроХрпНроХро┐роЯрпБроХро┐ро▒родрпБ. роЙроЯройрпЗ роХро╡ройро┐роХрпНроХро╡рпБроорпН!"
            msg_action = "ЁЯУЙ SLOW DOWN. Do not honk loudly (ро╡ро┐ро▓роЩрпНроХрпИ рооро┐ро░роЯрпНроЯ ро╡рпЗрогрпНроЯро╛роорпН)."

        # B. CYCLES LOGIC
        elif category_code == "1":
            symbol = "ЁЯЪ▓"
            alert_title = "CYCLIST AHEAD"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ рооро┐родро┐ро╡рогрпНроЯро┐ ({obj_name}) ро╡ро░рпБроХро┐ро▒родрпБ. роЗроЯрпИро╡рпЖро│ро┐ ро╡ро┐роЯрпНроЯрпБ роЪрпЖро▓рпНро▓ро╡рпБроорпН."
            msg_action = "тЖФя╕П KEEP SAFE DISTANCE."

        # C. EMERGENCY LOGIC
        elif any(k in obj_name.lower() for k in ["ambulance", "fire", "police"]):
            symbol = "ЁЯЪи"
            alert_title = "EMERGENCY / роЕро╡роЪро░ ро╡ро╛роХройроорпН"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ роЕро╡роЪро░ ро╡ро╛роХройроорпН ({obj_name}) ро╡ро░рпБроХро┐ро▒родрпБ! ро╡ро┤ро┐ро╡ро┐роЯро╡рпБроорпН!"
            msg_action = "ЁЯЫС STOP ALL TRAFFIC. Clear Path."

        # D. HEAVY VEHICLE LOGIC
        elif any(k in obj_name.lower() for k in ["bus", "lorry", "truck", "jcb", "roller"]):
            symbol = "ЁЯЪЫ"
            alert_title = "HEAVY VEHICLE / роХройро░роХ ро╡ро╛роХройроорпН"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ рокрпЖро░ро┐роп ро╡ро╛роХройроорпН ({obj_name}) ро╡ро░рпБроХро┐ро▒родрпБ."
            msg_action = "тЪая╕П YIELD WAY. Watch Blind Spots."

        # E. SCHOOL VAN LOGIC
        elif "school" in obj_name.lower():
            symbol = "ЁЯЪ╕"
            alert_title = "SCHOOL TRANSPORT"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ рокро│рпНро│ро┐ ро╡ро╛роХройроорпН ро╡ро░рпБроХро┐ро▒родрпБ. роХрпБро┤роирпНродрпИроХро│рпН роЗро░рпБрокрпНрокро╛ро░рпНроХро│рпН, роХро╡ройроорпН."
            msg_action = "ЁЯУЙ REDUCE SPEED."

        # F. STANDARD LOGIC
        else:
            symbol = "ЁЯЪЧ"
            alert_title = "VEHICLE DETECTED"
            msg_tamil = f"'{tamil_dir}' родро┐роЪрпИропро┐ро▓ро┐ро░рпБроирпНродрпБ {obj_name} ро╡ро░рпБроХро┐ро▒родрпБ."
            msg_action = "тЬЕ PROCEED WITH CAUTION."

        # --- PRINTING THE CARD ---
        print("\n\n")
        print(" " + "_"*52 + " ")
        print(f"|  {symbol} {alert_title.center(46)}  |")
        print(" " + "="*52 + " ")
        print(f"  ЁЯФН OBJECT DETECTED  : {obj_name}")
        print(f"  ЁЯУН COMING FROM      : {coming_dir} ({tamil_dir})")
        print(" " + "-"*52 + " ")
        print(f"  ЁЯФК VOICE ANNOUNCEMENT (родрооро┐ро┤рпН):")
        print(f"     \"{msg_tamil}\"")
        print(" " + "-"*52 + " ")
        print(f"  ЁЯСо POLICE AI ACTION:")
        print(f"     {msg_action}")
        print(" " + "_"*52 + " ")
        print("\n")

if __name__ == "__main__":
    system = SmartTrafficAssistant()
    while True:
        system.start_system()
        chk = input("Press ENTER to Scan Next (or type 'exit'): ").lower()
        if chk == 'exit':
            break
